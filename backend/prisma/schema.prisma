generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String             @id @default(uuid())
  email              String             @unique
  name               String?
  salt               String
  iv                 String
  encryptedVaultKey  String
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  photo              String?
  password           String
  bankAccountEntries BankAccountEntry[]
  cardEntries        CardEntry[]
  emailEntries       EmailEntry[]
  identityEntries    IdentityEntry[]
  noteEntries        NoteEntry[]
  passwordEntries    PasswordEntry[]
  twoFAEntries       TwoFAEntry[]
}

model PasswordEntry {
  id              String   @id @default(uuid())
  userId          String
  name            String
  username        String
  url             String?
  encryptedSecret String
  iv              String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailEntry {
  id              String   @id @default(uuid())
  userId          String
  email           String
  username        String
  encryptedSecret String
  iv              String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TwoFAEntry {
  id              String   @id @default(uuid())
  userId          String
  title           String
  issuer          String
  accountName     String
  encryptedSecret String
  iv              String
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NoteEntry {
  id              String   @id @default(uuid())
  userId          String
  title           String
  encryptedSecret String
  iv              String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CardEntry {
  id            String   @id @default(uuid())
  userId        String
  brand         String?
  encryptedData String
  iv            String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BankAccountEntry {
  id              String   @id @default(uuid())
  userId          String
  bankName        String
  routingNumber   String?
  accountType     String?
  encryptedSecret String
  iv              String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model IdentityEntry {
  id              String   @id @default(uuid())
  userId          String
  firstName       String
  lastName        String
  email           String?
  phone           String?
  address         String?
  encryptedSecret String
  iv              String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
